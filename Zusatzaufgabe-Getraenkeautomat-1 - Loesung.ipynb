
    "# Getränkeautomat einfachste Version\n",
    "# -*- coding: utf-8 -*-\n",
    "import sys\n",
    "\n",
    "# Hier wird für jedes Getränk eine Liste angelegt, in der der Name und der Preis festgelegt wird.\n",
    "getraenk1 = [\"Cola\", 1.00]\n",
    "getraenk2 = [\"Fanta\", 1.00]\n",
    "getraenk3 = [\"Sprite\", 1.00]\n",
    "getraenk4 = [\"Saft\", 1.10]\n",
    "getraenk5 = [\"Wasser\", 0.80]\n",
    "getraenk6 = [\"Red Bull\", 3.00]\n",
    "\n",
    "# Die Ausgabe, die Preise werden aus den entsprechenden Listen ausgelesen\n",
    "print(\"** Getränk -O- Mat***\")\n",
    "print(f\"1 - Cola: {getraenk1[1]} Euro\")\n",
    "print(f\"2 - Fanta: {getraenk2[1]} Euro\")\n",
    "print(f\"3 - Sprite: {getraenk3[1]} Euro\")\n",
    "print(f\"4 - Saft: {getraenk4[1]} Euro\")\n",
    "print(f\"5 - Wasser: {getraenk5[1]} Euro\")\n",
    "print(f\"6 - Red Bull: {getraenk6[1]} Euro\")\n",
    "print(\"0 - beenden\")\n",
    "geld = float(input(\"Bitte werfen Sie Geld ein! \"))\n",
    "auswahl = 7  # Die Auswahl wird mit 7 initialisiert, damit die Schleife betreten wird\n",
    "\n",
    "if geld == 0:\n",
    "    print(\"Auf Wiedersehen!\")\n",
    "    sys.exit(0)\n",
    "\n",
    "while auswahl >= 6:\n",
    "        auswahl = int(input(\"Bitte wählen Sie ein Getränk: (1-6) \"))\n",
    "    if auswahl == 0:\n",
    "        print(\"Auf Wiedersehen!\")\n",
    "        sys.exit(0)\n",
    "\n",
    "if auswahl == 1:\n",
    "    betrag = getraenk1[1]\n",
    "if auswahl == 2:\n",
    "    betrag = getraenk2[1]\n",
    "if auswahl == 3:\n",
    "    betrag = getraenk3[1]\n",
    "if auswahl == 4:\n",
    "    betrag = getraenk4[1]\n",
    "if auswahl == 5:\n",
    "    betrag = getraenk5[1]\n",
    "if auswahl == 6:\n",
    "    betrag = getraenk6[1]\n",
    "\n",
    "if betrag > geld:\n",
    "    print()\n",
    "    print(\"Leider reicht ihr Geld nicht aus, auf Wiedersehen!\")\n",
    "    print(f\"Sie erhalten {geld} Euro zurück *klöter*\")\n",
    "\n",
    "if betrag < geld:\n",
    "    rueckgabe = float(geld - betrag)\n",
    "    print()\n",
    "    print(\"*Klapper*, das Getränkt fällt in das Ausgabefach...\")\n",
    "    print(f\"Sie erhalten {rueckgabe:.2f} Euro zurück *klöter*\") # Die Ausgabe wird auf 2 Kommastellen erweitert\n",
    "\n",
    "if betrag == geld:\n",
    "    print()\n",
    "    print(\"*Klapper*, das Getränkt fällt in das Ausgabefach...\")"
   ]
  }
